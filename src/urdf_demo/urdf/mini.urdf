<robot name="test_robot">
    <material name="blue">
        <color rgba="0 0 0.8 1"/>
      </material>
    
      <material name="red">
        <color rgba="0.8 0 0 1"/>
      </material>

      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
      <material name="green">
        <color rgba="0.2 1 0.2 1"/>
    </material>

    <link name="world"></link>

    <joint name="world_joint" type="fixed">
        <origin xyz="1.0 1.0 0" rpy="0 0 0"/>
        <parent link="world"/>
        <child link="link1"/>        
    </joint>

    <link name="link1">
        <visual>
            <origin xyz="0 0 0.2" rpy="0 0 0" />
            <geometry>
                <box size="0.4 0.4 0.4" />
            </geometry>
            <material name="green"/>
        </visual>
    </link>
    <link name="link2" >
        <visual>
            <origin xyz="0 0 0.15" rpy="0 0 0" />
            <geometry>
                <box size="0.3 0.3 0.3" />
            </geometry>
            <material name="blue"/>
        </visual>
    </link>
    <link name="link3" >
        <visual>
            <origin xyz="0 0 0.05" rpy="0 0 0" />
            <geometry>
                <box size="0.1 0.1 0.1" />
            </geometry>
            <material name="red"/>
        </visual>
    </link>
   
  
    <joint name="joint1" type="continuous">
      <parent link="link1"/>
      <child link="link2"/>
      <origin xyz="0 0 0.4" rpy="0 0 0" />
    </joint>
  
    <joint name="joint2" type="revolute">
      <parent link="link2"/>
      <child link="link3"/>
      <origin xyz="0 0 0.3" rpy="0 0 0" />
      <axis xyz="0 0 1" />
      <limit effort="30" velocity="1.0" lower="-0.707" upper="0.707"/>
    </joint>
  
  
  </robot>